{
  "compilerOptions": {
    "target": "ES2015",
    "module": "es2015",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": true,
    "importHelpers": true,
    "lib": [
      "es2017", "dom"
    ]
  },
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true
  },
  "include": [
    "src/**/*",
    "custom_typings/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}
